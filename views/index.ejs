<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title><%= title %></title>
</head>
<body>
    
    <nav>
        <a href="/">Homepage</a>
        <a href="/create">Create Course</a>
    </nav>

    <% if(courses.length > 0) { %>
        <% courses.forEach(c => { %>
            <div class="component">
                <a href='/<%= c._id%>'>
                    <div class='scheme'>
                        <h3><%=  c.title %></h3>
                        <p><%=  c.course %></p>
                        <p>Id: <%= c._id%></p>
                        <!-- <a id="delete" data-doc="<%= c._id%>">Delete</a> -->
                    </div>
                </a>
            </div>
        <% }) %>

    <% } else { %>
        <p>No Courses to display</p>
    <% } %>




</body>
</html>